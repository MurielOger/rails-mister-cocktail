<h1><%= @cocktail.name %></h1>

<div class="container text-center m-3">
  <div class="row">
    <div class="col-sm-6">
      <div>
        <%= simple_form_for([@cocktail, @dose]) do |f| %>
        <%= f.input :description %>
        <%= f.association :ingredient %>
        <%= f.submit %>
        <% end %>
      </div>
    </div>
  </div>
</div>
