<div class="container m-3">
  <div class="row">
    <div class="col-sm-12">
      <h2>Name : <%= @cocktail.name %></h2>

      <br>
        <% if @cocktail.photo.attachment %>
          <%= cl_image_tag @cocktail.photo.key, height: 300, width: 400, crop: :fill %>
        <% end %>
      <ul>
      <% @cocktail.doses.each do |dose| %>
        <li><%= dose.ingredient.name %> : <%= dose.description %></li>
          <%= link_to 'delete this dose', dose_path(dose), method: :delete%><br>

      <% end %>
      </ul>

    </div>

    <div class="col-sm-12">
      <%= link_to 'Add an ingredient', new_cocktail_dose_path(@cocktail) %><br>
      <%= link_to 'come back to the list', cocktails_path %><br>
      <%= link_to 'delete this cocktail', cocktail_path(@cocktail), method: :delete%>

    </div>
  </div>
</div>
